    [cnpj] [char](14) NOT NULL,
	[cep] [char](8) NOT NULL,
	[cidade] [varchar](100) NOT NULL,
	[uf] [char](2) NOT NULL,
	[telefone] [varchar] (15) NOT  NULL,
    [email] [varchar] (200) NOT NULL,    
-->